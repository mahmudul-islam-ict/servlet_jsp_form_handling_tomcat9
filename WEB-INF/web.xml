<web-app>
    <servlet>
        <servlet-name>formsapp</servlet-name>
        <servlet-class>FormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>formsapp</servlet-name>
        <url-pattern>/formsapp/formServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>formsapp</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>